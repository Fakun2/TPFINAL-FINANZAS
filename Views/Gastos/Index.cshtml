@model IEnumerable<TPFINALFINANZAS.Models.Gasto>
@{
    ViewData["Title"] = "Gastos";
}
<h1>Gastos</h1>
<p><a asp-action="Crear" class="btn btn-primary">Crear gasto</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Descripcion</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Categoria</th>
            <th>Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Descripcion</td>
        <td>@item.Monto.ToString("C")</td>
        <td>@item.Fecha.ToShortDateString()</td>
        <td>@item.Categoria?.Nombre</td>
        <td>@item.Usuario?.Nombre</td>
        <td>
            <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
            <a asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a>
        </td>
    </tr>
}
    </tbody>
</table>
