@{
    ViewData["Title"] = "FINANZAS";
    var categorias = ViewData["PorCategoria"] as IEnumerable<dynamic>;
}

<div class="text-center mb-4">
    <h1 class="fw-bold">Bienvenido a tu gestor de gastos</h1>
    <p class="text-muted">Usa el menú superior para navegar usuarios, categorías y gastos</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body text-center">
                <h5 class="fw-bold mb-2">Total general de gastos</h5>
                <h3 class="text-danger fw-bold">@String.Format("{0:C}", ViewData["Total"])</h3>
            </div>
        </div>
    </div>
</div>

@if (categorias != null && categorias.Any())
{
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3 text-center">Gastos por categoría</h5>
                    <table class="table table-striped table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Categoría</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in categorias)
                        {
                            <tr>
                                <td>@item.Categoria</td>
                                <td class="text-danger fw-bold">@String.Format("{0:C}", item.Total)</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}